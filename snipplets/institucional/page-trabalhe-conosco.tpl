    <div class="form-container container">
        <h2>Interessado em Agregar?</h2>

        <form id="esplanada-trabalhe-conosco" action="" method="post" enctype="multipart/form-data">
            {% set allowed_files = '.pdf,.jpg,.jpeg,.png,.doc,.docx' %}
            <input type="hidden" name="id" value="esplanada-trabalhe-conosco">

            <div class="form-group">
                <label for="nome">Nome</label>
                <input type="text" id="nome" name="Nome" placeholder="Seu nome completo" required>
            </div>

            <div class="form-group">
                <label for="telefone">Telefone</label>
                <input type="tel" id="telefone" name="Telefone" placeholder="Ex. (11) 99999-9999" required>
            </div>

            <div class="form-group">
                <label for="email">E-mail</label>
                <input type="email" id="email" name="email" placeholder="Seu e-mail" required>
            </div>

            <div class="form-group">
                <label for="modelo_veiculo">Modelo do Veículo</label>
                <input type="text" id="modelo_veiculo" name="Modelo do Veiculo" placeholder="Descreva a marca e modelo do veículo" required>
            </div>

            <div class="form-group">
                <label for="ano_veiculo">Ano do Veículo</label>
                <select id="ano_veiculo" name="Ano do Veiculo" required>
                    <option value="" disabled selected>Selecione o ano do veículo</option>
                    {% set current_year = "now"|date("Y") %}
                    {% for year in current_year..1995 %}
                        <option value="{{ year }}">{{ year }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="form-group">
                <label for="tipo_veiculo">Tipo do Veículo</label>
                <select id="tipo_veiculo" name="Tipo do Veiculo" required>
                    <option value="" disabled selected>Selecione o tipo do veículo</option>
                    <option value="vuc">VUC</option>
                    <option value="caminhao_3_4">Caminhão 3/4</option>
                </select>
            </div>

            <div class="form-group file-upload">
                <label for="cnh_motorista">CNH Motorista (enviar cópia do documento)*</label>
                <input type="file" id="cnh_motorista" name="CNH do Motorista" required accept="{{ allowed_files }}">
                <div class="file-button-box">
                    <label for="cnh_motorista" class="file-label">Escolher arquivo</label>
                    <span class="file-name">Nenhum arquivo escolhido</span>
                </div>
            </div>

            <div class="form-group file-upload">
                <label for="crlv">CRLV (enviar cópia do documento)*</label>
                <input type="file" id="crlv" name="CRLV" required accept="{{ allowed_files }}">
                <div class="file-button-box">
                    <label for="crlv" class="file-label">Escolher arquivo</label>
                    <span class="file-name">Nenhum arquivo escolhido</span>
                </div>
            </div>

            <div class="form-group file-upload">
                <label for="cartao_cnpj">Cartão do CNPJ (enviar cópia do documento)*</label>
                <input type="file" id="cartao_cnpj" name="Cartao do CNPJ" required accept="{{ allowed_files }}">
                <div class="file-button-box">
                    <label for="cartao_cnpj" class="file-label">Escolher arquivo</label>
                    <span class="file-name">Nenhum arquivo escolhido</span>
                </div>
            </div>
            
            <div class="form-group file-upload">
                <label for="cartao_antt">Cartão da ANTT (enviar cópia do documento)*</label>
                <input type="file" id="cartao_antt" name="Cartao da ANTT" required accept="{{ allowed_files }}">
                <div class="file-button-box">
                    <label for="cartao_antt" class="file-label">Escolher arquivo</label>
                    <span class="file-name">Nenhum arquivo escolhido</span>
                </div>
            </div>

            <div class="form-group file-upload">
                <label for="comprovante_endereco">Comprovante de Endereço (enviar cópia do documento)*</label>
                <input type="file" id="comprovante_endereco" name="Comprovante de Endereco" required accept="{{ allowed_files }}">
                <div class="file-button-box">
                    <label for="comprovante_endereco" class="file-label">Escolher arquivo</label>
                    <span class="file-name">Nenhum arquivo escolhido</span>
                </div>
            </div>

            <p class="file-support-note">* Arquivos suportados: PDF, JPG, PNG, DOC.</p>

            <div class="submit-container">
                <button type="submit" class="btn-submit">Enviar</button>
            </div>

            <div id="form-status" class="form-status-message"></div>
        </form>
    </div>
</section>